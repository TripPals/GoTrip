<%= render 'layouts/header_trip' %>
<div class="new-trip-form-body">
  <h1>建立行程</h1>
  <%= form_for(@trip, url: trips_create_path) do |t| %>
    <div class="fields">
      <%= t.label :name, "行程名稱" %>
      <%= t.text_field :name %>
    </div>
    <div class="fields">
      <%= t.label :length, "天數" %>
      <%= t.number_field :length, min: 1 %>
    </div>
    <div>
    <%= t.label :start_date, "開始日期" %>
    <%= t.date_field :start_date, start_year: 1800, end_year: Time.now.year %>
    </div>
    

    <%= t.submit  %>

  <% end %>
</div>
