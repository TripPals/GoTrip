<%= content_for :header do %>
  <div class="header1-wrap">
    <div class="header1-logo">
      <img src="images/logo.png" alt="GoTrip">
    </div>
    <div class="header1-nav header1-btn bg-light">
      <%= link_to '關於我們', about_path, class: "about header1-btn" %>
      <div class="header1-user">
        <% if user_signed_in? %>
          <div class="user-show">
            <img src="<%= current_user.show_image %>" alt="嗨">
            <p><%= link_to current_user.display_name, edit_user_registration_path %></p>
          </div>  
          <%= link_to "登出", destroy_user_session_path, method: :delete, data: {confirm:'您的帳號將登出。掰掰～下次再一起出遊。'} %><p> | </p>
          <%= link_to "我的行程", trips_path %>
          </div>
        <% else %>
          <div class="header1-before-login">
            <%= link_to '登入', new_user_session_path, class: "header1-btn btn-border" %>
            <%= link_to '註冊', new_user_registration_path,class: "header1-btn btn-border bg-dark signup"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>