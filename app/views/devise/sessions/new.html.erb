<h2>登入GoTrip</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: '郵件Email' %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: '密碼' %>
  </div>
  <% f.text_field :provider, default:'register' %>

  <div class="actions">
    <%= f.submit "立即登入" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
